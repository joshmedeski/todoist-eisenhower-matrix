{
  "manifest_version": 2,
  "name": "Todoist Eisenhower Matrix",
  "version": "0.0.0",
  "description": "Sort your Todoist tasks by urgency and importance.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "short_name": "TEM",
  "background": {
    "scripts": [
      "extension-scripts/main.js"
    ]
  },
  "permissions": [
    "storage",
    "*://*.todoist.com/*",
    "cookies"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "incognito": "split",
  "offline_enabled": true
}
